{
  "name": "pink",
  "author": "mindescape",
  "version": "1.0.0",
  "description": "Личный проект «Pink» от  HTML Academy",
  "repository": {
    "type": "git",
    "url": "https://github.com/mindescape/pink.git"
  },
  "devDependencies": {
    "@htmlacademy/editorconfig-cli": "^1.0.0",
    "autoprefixer": "^9.2.0",
    "browser-sync": "^2.26.3",
    "gulp": "^3.9.1",
    "gulp-plumber": "^1.2.0",
    "gulp-postcss": "^8.0.0",
    "gulp-sass": "^4.0.1",
    "stylelint": "^9.6.0",
    "stylelint-config-recommended": "^2.1.0"
  },
  "scripts": {
    "editorconfig": "editorconfig-cli",
    "stylelint": "stylelint \"source/sass/**/*.sass\" --syntax scss",
    "test": "npm run editorconfig && npm run stylelint",
    "start": "gulp serve"
  },
  "browserslist": [
    "last 2 versions",
    "IE 11",
    "Firefox ESR"
  ],
  "editorconfig-cli": [
    "*.json",
    "*.js",
    "source/*.html",
    "source/js/**/*.js",
    "source/img/**/*.svg",
    "source/sass/**/*.scss"
  ],
  "dependencies": {
    "svgxuse": "^1.2.6"
  }
}
